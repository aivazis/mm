# configuration for libsimple
simple.lib.stem := simple
simple.lib.root := lib/simple/

# no dependencies, yet
simple.lib.extern :=

# use c++20
simple.lib.c++.flags += $($(compiler.c++).std.c++20)

# the autogen files
simple.lib.headers.autogen := version.h.in
# the expansion table
simple.lib.autogen = \
    @MAJOR@|$(simple.major)\
    @MINOR@|$(simple.minor) \
    @MICRO@|$(simple.micro) \
    @REVISION@|$(simple.revision) \


# end of file
